<form class="form-horizontal" method="post">
    <fieldset>
        <legend class="section">Add Link</legend>
    
        <div class="control-group">
            <label class="control-label" for="normal-field">URL</label>
            <div class="controls form-group">
                <div class="col-sm-10">
                    <input type="text" id="transparent-field" class="form-control input-transparent" placeholder="http://">
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="normal-field">Link Text</label>
            <div class="controls form-group">
                <div class="col-sm-10">
                    <input type="text" id="transparent-field" class="form-control input-transparent" placeholder="Menu Item">
                </div>
            </div>
        </div>
 
    </fieldset>
    <div class="form-actions">
        <div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <button type="button" class="btn btn-default">Cancel</button>
        </div>
    </div>
</form>